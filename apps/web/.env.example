# =================================================================
# Authentication Configuration (Clerk)
# =================================================================

# Required: Clerk API Keys
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_...
CLERK_SECRET_KEY=sk_...

# Authentication Redirect URLs
# Note: Sign-up is disabled (invite-only). Users join via organization invitations.
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/auth/sign-in"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"

# =================================================================
# GP API Configuration
# =================================================================

# Shared settings
GP_API_PROTOCOL=http
GP_API_PORT=3000
GP_API_ROOT_PATH='/v1'

# Per-environment domains and machine secrets
GP_DEV_API_DOMAIN=localhost
GP_DEV_MACHINE_SECRET=ak_...
GP_QA_API_DOMAIN=
GP_QA_MACHINE_SECRET=ak_...
GP_PROD_API_DOMAIN=
GP_PROD_MACHINE_SECRET=ak_...

# Clerk Org ID â†’ GP environment mapping
GP_ORG_ID_DEV=org_a
GP_ORG_ID_QA=org_b
GP_ORG_ID_PROD=org_c

